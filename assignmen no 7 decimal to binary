#include<stdio.h>


int n=5,a[5],top=-1;





void push(int rem)


{


    top++;


    a[top]=rem;


}





void decimaltobinary(int num)


{


    int rem,quo;


    while(num/2>=1 && num!=1)


    {


        rem=num%2;


        quo=num/2;


        push(rem);


        num=quo;


        if(num==1)


        {


            push(num);


        }


    }


}





void pop()


{


    printf("%d\t",a[top]);


    top--;


}





int main()


{


    int num;


    printf("Enter the decimal number\n");


    scanf("%d",&num);


    if(num==0)


    {


        printf("Binary Form=0");


    }


    else


    {


        if(num<0)


        {


            num=-num;


        }


        decimaltobinary(num);


        printf("The Binary Form of Number is:\n");


        for(int i=top;i>=0;i--)


        {


            pop();


        }


    }


    return 0;


}
