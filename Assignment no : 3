#include <stdio.h>

int main()
{
    int n,i,j,temp,min;
    printf("Enter size of an array:");
    scanf("%d",&n);
    
    int a[n];
    
    printf("Array elements are:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
    for(i=0;i<n-1;i++)
     {
         min=i;
        for(j=i+1;j<n;j++)
        {
           if(a[j]<a[min])
           {
               min=j;
               
           }
        }
         if(min!=i)
         {
              temp=a[i];
              a[i]=a[min];
              a[min]=temp;
           }
        
     }
     
  printf("Sorted array elements are:");
  for(i=0;i<n;i++)
  {
      printf("%d",a[i]);
  }
  
  return 0;
}
